<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bakingtime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecipeStepsActivity"
            android:label="@string/recipe_steps"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            android:noHistory="false">
        </activity>

        <activity
            android:name=".StepDetailActivity"
            android:label="@string/step_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName=".RecipeStepsActivity"
            android:noHistory="false">
        </activity>

        <activity
            android:name=".IngredientListActivity"
            android:label="@string/ingredients"
            android:theme="@style/AppTheme"
            android:parentActivityName=".RecipeStepsActivity"
            android:noHistory="false">
        </activity>
    </application>

</manifest>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/widget_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/widget_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widget Header"
            android:layout_gravity="center_vertical"
            android:textColor="@color/scampi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:paddingStart="@dimen/margin_padding_8"
            android:paddingLeft="@dimen/margin_padding_8"
            android:paddingEnd="@dimen/margin_padding_8"
            android:paddingRight="@dimen/margin_padding_8"/>
    </LinearLayout>

    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/NestedScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical">
        <Button
            android:id="@+id/recipe_ingredients_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ingredient_button_height"
            android:text="@string/recipe_ingredients"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"
            android:paddingLeft="@dimen/text_size_12"
            android:gravity="left|center_vertical"
            android:background="@drawable/rounded_corner"
            android:layout_margin="@dimen/margin_padding_16"/>

            <FrameLayout
                android:id="@+id/recipe_steps_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin_padding_16"
                android:paddingRight="@dimen/margin_padding_16"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
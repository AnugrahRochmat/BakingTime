<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_padding_12"
    android:paddingBottom="@dimen/margin_padding_8">

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/ingredient_quantity_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separated_lines"
        android:background="@color/spun_pearl"
        android:layout_below="@id/ingredient_name"/>

</RelativeLayout>
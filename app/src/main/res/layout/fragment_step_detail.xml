<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_16">

    <ImageView
        android:id="@+id/step_thumbnail_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_card_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/margin_padding_16"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_card_height"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/rounded_corner_radius" >

        <TextView
            android:id="@+id/step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_16"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:scrollbars="vertical"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
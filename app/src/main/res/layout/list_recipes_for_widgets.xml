<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_padding_8"
    android:paddingBottom="@dimen/margin_padding_8"
    android:paddingLeft="@dimen/margin_padding_16"
    android:paddingRight="@dimen/margin_padding_16">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_widget_configuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/green_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="@dimen/recipe_card_width_widget_configuration"
                android:layout_height="@dimen/recipe_card_height_widget_configuration"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/brownies" />

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_32"
                android:textSize="@dimen/text_size_20"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
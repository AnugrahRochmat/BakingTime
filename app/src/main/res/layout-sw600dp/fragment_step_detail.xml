<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <!--<ImageView-->
                <!--android:id="@+id/step_thumbnail_image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/step_image_detail_height"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:src="@drawable/brownies"-->
                <!--android:layout_marginBottom="@dimen/margin_padding_16"/>-->
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/step_detail_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/step_image_detail_height"
                android:layout_marginBottom="@dimen/margin_padding_16" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="@dimen/rounded_corner_radius">

                <TextView
                    android:id="@+id/step_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_padding_16"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:scrollbars="vertical"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
</RelativeLayout>